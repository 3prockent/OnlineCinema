<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemeOnlineWeb</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/dark-bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body>


<header>
    <nav class="navbar navbar-expand-lg navbar-dark box-shadow">
        <div id="nav-div" class="container-fluid border-bottom">
            <a class="navbar-brand rounded-logo" href="/">CinemeOnlineWeb</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Films</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Actors">Actors</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
</header>
<div>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top text-muted">
    <div>
        &copy; 2022 - CinemeOnlineWeb - Privacy<br>
        Email for communication: v.spotar@knu.ua
    </div>
</footer>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="js/mod-styles-scripts.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
