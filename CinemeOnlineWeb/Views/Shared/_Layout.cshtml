<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemeOnlineWeb</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/dark-bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body>


<header>
    <nav class="navbar navbar-expand-lg navbar-dark box-shadow">
        <div id="nav-div" class="container-fluid border-bottom">
            <a class="navbar-brand rounded-logo" href="/">CinemeOnlineWeb</a>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Films</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Actors">Actors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/CratorsTeams">Teams</a>
                    </li>
                </ul>
                <ul class="nav flex-grow-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class=nav-item>
                            <p class="nav-text">
                                Hello @User.Identity.Name
                            </p>
                        </li>
                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="Roles" asp-action="UserList" class=nav-link>Roles</a>
                                </li>
                            }
                            <li class="nav-item">
                            <a asp-controller="Account" asp-action="Logout" class="nav-text">Logout</a>
                        </li>
                    }
                    else{
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path" class="nav-link">Login</a>
                        </li>
                        <li class ="nav-item">
                            <a asp-controller="Account" asp-action="Register" class="nav-link">Register</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top text-muted">
    <div>
        &copy; 2022 - CinemeOnlineWeb - Privacy<br>
        Email for communication: v.spotar@knu.ua
    </div>
</footer>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="js/mod-styles-scripts.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
