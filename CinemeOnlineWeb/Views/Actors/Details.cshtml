@model CinemeOnlineWeb.Actor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class = "col-sm-10">
            @{
                string formatBirthDate = Model.BirthDate.ToString("dd.MM.yyyy");
            }
            @Html.DisplayFor(model => @formatBirthDate)

        </dd>
    </dl>
</div>
<div>
    @if(User.IsInRole("admin") || User.IsInRole("editor"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.ActorId">Edit |</a> 
    }
    <a asp-action="Index" asp-controller="Actors">View all actors</a>
</div>
